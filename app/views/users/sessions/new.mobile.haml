%title TicketHQ
=stylesheet_link_tag "jqtouch/jqtouch.min.css", "jqtouch/themes/apple/theme.min.css", "mobile"
=javascript_include_tag "jqtouch/jqtouch.min.js", "jqtouch/jquery.1.3.2.min.js"
=javascript_include_tag :defaults
%meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;", :name => "viewport"}

.current
	.toolbar
		%h1 TicketHQ Movil
	-unless flash.empty?
		.info
			-flash.each do |name, msg|
				=content_tag :div, msg, :id => "flash_#{name}"	
	=form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:name => "login_user", :class => "form"}) do |f|
		%ul
			%li=f.text_field :email, :placeholder => 'Email'
			%li=f.password_field :password, :placeholder => 'ContraseÃ±a'
			%li
				=f.check_box :remember_me
				Recordarme	
			
		=link_to "Entrar", "#", :onclick => "document.login_user.submit();", :class => "whiteButton submit"

	.info
		%p=link_to "Version Completa", root_url(:mobile => 0)